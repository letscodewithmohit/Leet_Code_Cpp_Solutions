class Solution {
public:
    vector<int> buildArray(vector<int>& nums) {
        int n = nums.size();
        vector<int>ans(n);
         int j = 0;
        for(int i=0; i<n; i++){
            // int idx = nums[i];
            // ans[j] = nums[idx];
            // j++;
            //short hands
            ans[i] = nums[nums[i]];
        }
        return ans;
    }
};
