class Solution {
public:
    int numberOfSteps(int num) {
        int zerocnt = 0;
       while(num !=0){
       if(num % 2 == 0){
        num /= 2;
        zerocnt++;
        }
        else if(num % 2 != 0){
        num-=1;
        zerocnt++;
        }
       }
        return zerocnt;
       
    }
};
